<%= form_for([@loop, @event], :html => { :multipart => true }, url: loop_create_event_path(@loop)) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field event-date-field">
    <%= f.datetime_select :date %>
  </div>

  <div class="field">
    <%= f.label :tag_list, "Tags (Separate by Comma)" %><br />
    <%= f.text_field :tag_list %>
  </div>

  <div class="field" style="position:absolute;left: 300px;top:130px;">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <%= f.file_field :avatar %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
