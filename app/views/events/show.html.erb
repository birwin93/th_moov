<p id="notice"><%= notice %></p>

<div class="share-box">
	<%= render 'loop_event_shares/share_event_form' %>
	<ul class="nav nav-tabs nav-stacked">
	<% if current_user.events.include?(@event) %>
		<li> <a href="#"> Leave Event </a> </li>
	<% else %>
		<%= link_to 'Join', join_event_path(@event), method: :post %>
	<% end %>
</ul>
</div>

<div class="info-container">
	<%= image_tag @event.avatar.url(:medium), class: "event-medium" %>
	<div class="event-show-name">
		<%= @event.name %>
	</div>
	<div class="event-description">
		<%= @event.description %>
	</div>
	<div class="event-location">
		<%= @event.location.city %>
	</div>
</div>

<div class="share-box">
	<%= render 'loop_event_shares/share_event_form' %>
</div>