<!DOCTYPE html>
<html>
<head>
  <title> <%= full_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <scipt src="http://htmlshim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>


<div class="container-fluid" id="main">
  <div id="sidebar">
    <% if signed_in? %>
      <%= render 'left_menu/left_menu' %>
      <ul class="nav" id="main-nav">
        <li> 
          <div class="menu-image-container" id="menu-me">
          </div>
          <%= link_to "Me", user_path(current_user) %> 
        </li>
        <li> 
          <div class="menu-image-container" id="menu-loop">
          </div>
          <%= link_to "Loops", loops_path %> 
        </li>
        <li> 
          <div class="menu-image-container" id="menu-event">
          </div>
          <%= link_to "Events", events_path %> 
        </li>
        <li> 
          <div class="menu-image-container" id="menu-setting">
          </div>
          <a href="#"> Settings </a> 
        </li>
     </ul>
    <% end %>
  </div>
  <div class="row-fluid">
    <div id="inner-container">
      <div class="span12">
        <div class="body-container">
          <% flash.each do |key, value| %>
            <div class="center alert alert-<%= key %>">
              <%= value %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/lower_navbar' %>

<%= debug(params) if Rails.env.development? %>
</body>
</html>
