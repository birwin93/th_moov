<!DOCTYPE html>
<html>
<head>
  <title> <%= full_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <scipt src="http://htmlshim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
  
<div class="row-fluid">
  <div class="offset3">
  	<% flash.each do |key, value| %>
  		<div class="center alert alert-<%= key %>">
        <%= value %>
      </div>
  	<% end %>
  	<%= yield %>
  </div>
</div>


<% if signed_in? %>
<%= render 'layouts/left_navbar' %>
<% end %>


<%= render 'layouts/lower_navbar' %>


<%= debug(params) if Rails.env.development? %>
</body>
</html>
