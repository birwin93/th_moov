<% provide(:title, @user.firstName) %>


<div class="row-fluid">
	<div class="span3">
		<div class="notification-area">
			<ul>
				<% @invitations.each do |i| %>
					<li> <%= link_to i.author.full_name, i.author %> has invited you to join 
						<%= link_to i.loop.name, i.loop %> 
						<br>
						<%= link_to "Join", accept_loop_membership_path(i), method: :put %>
					</li>
				<% end %>
			</ul>
		</div>
	</div>

	<div class="span9">
		<div class="flow event-flow">
			<ul>
				<% @user.events.each do |event| %>
					<li> 
						<div class="flow-item event-flow-item"> 
							<%= link_to event.name, event %>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>