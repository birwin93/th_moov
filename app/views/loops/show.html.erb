<div class="row">
  <div class="span6 offset3">
		<p id="notice"><%= notice %></p>

		<p>
		  <b>Privacy:</b>
		  <%= @loop.privacy %>
		</p>

		<p>
		  <b>Name:</b>
		  <%= @loop.name %>
		</p>

		<p>
		  <b>Description:</b>
		  <%= @loop.description %>
		</p>

		<%= form_for(@user, url: loop_loop_memberships_path(@loop)) do |f| %>
			<%= f.text_field :firstName %>
			<%= f.submit "Add Friend" %>
		<% end %>

		<div class="loop-user-box">
			<p> Members </p>
			<ul>
			<% @loop.users.each do |user| %>
				<li> <%= link_to user.full_name, user %> </li>
			<% end %>
			</ul>
		</div> 

		<%= link_to 'Edit', edit_loop_path(@loop) %> |
		<%= link_to 'Back', loops_path %>
	</div>
</div>
